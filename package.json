{
  "name": "PCBflow",
  "version": "0.1.0",
  "private": true,
  "devDependencies": {
    "assert": "^1.4.1",
    "babel-eslint": "^7.2.3",
    "chai": "^3.5.0",
    "chai-http": "^3.0.0",
    "concurrently": "^3.4.0",
    "eslint": "^3.19.0",
    "eslint-config-airbnb": "^14.1.0",
    "eslint-config-react-app": "^1.0.4",
    "eslint-import-resolver-webpack": "^0.8.1",
    "eslint-plugin-flowtype": "^2.34.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^4.0.0",
    "eslint-plugin-react": "^6.10.3",
    "faker": "^4.1.0",
    "mocha": "^3.3.0"
  },
  "dependencies": {
    "axios": "^0.17.1",
    "babel-cli": "^6.24.0",
    "babel-core": "^6.24.0",
    "body-parser": "^1.17.1",
    "dotenv": "^4.0.0",
    "express": "^4.15.2",
    "icono": "^1.3.0",
    "moment": "^2.20.1",
    "mongodb": "^2.2.24",
    "mongoose": "^4.8.6",
    "ramda": "^0.25.0"
  },
  "scripts": {
    "start": "concurrently \"node server.js\"  \"cd client && npm start\"",
    "server": "NODE_ENV='production' node server.js",
    "test": "mocha",
    "lint": "eslint --ext .js --ext .jsx client/src/ || exit 0",
    "lint:fix": "eslint --fix --ext .js --ext .jsx client/src/|| exit 0",
    "build:client": "cd client && npm run build",
    "commit:git": "git add . && git commit -m \"Builds for deployment\" || exit 0",
    "push:heroku": "git push heroku master",
    "deploy": "npm run build:client && npm run commit:git && npm run push:heroku"
  }
}
